global:
  scrape_interval: 15s
  evaluation_interval: 15s


rule_files:
  - /etc/prometheus/rules.yml


scrape_configs:
  - job_name: 'prometheus'
    static_configs:
    - targets: ['localhost:9090']

  - job_name: "uptime"
    scrape_interval: 30s
    scheme: http
    metrics_path: "/metrics"
    static_configs:
        - targets: ["uptime-kuma:3001"]
    basic_auth: # Only needed if authentication is enabled (default)
        username: admin
        password: admin1

  - job_name: node
    static_configs:
      - targets: {{ prometheusNodeExporterTargets | to_json }}
